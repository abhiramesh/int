<body class="devise-background">
  <div class="container" align="center">
    <div class="devise-header">
      Forgot your Password?
      <hr>
    </div>
	<%= form_for(resource, as: resource_name, url: password_path(resource_name, :validate => true), html: { method: :post }) do |f| %>
	  <%= devise_error_messages! %>

	  <div class="field">
	    <%= f.label :email %><br />
	    <%= f.email_field :email, autofocus: true %>
	  </div>

	  <div class="actions">
	    <%= f.submit "Send me reset instructions" %>
	  </div>
	<% end %>
	<br>
	<%= render "devise/shared/links" %>
  </div>
</body>
