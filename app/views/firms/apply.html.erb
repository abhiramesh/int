  <div class="container" align="center">
    <div class="devise-box">
      <div class="devise-header">
        Apply for a position at <%= @firm.name.capitalize %>
        <hr>
      </div>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validate => true) do |f| %>
        <div class="row-fluid">
          <div class="col-md-6">
            <div class="field">
              <%= f.label :firstname, "First Name" %><br />
              <%= f.text_field :firstname, autofocus: true %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="field">
              <%= f.label :lastname, "Last Name" %><br />
              <%= f.text_field :lastname, autofocus: true %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="field">
              <%= label_tag "access_code", "Application Code" %><br />
              <%= text_field_tag "access_code" %>
              <%= hidden_field_tag "firm_name", "#{@firm.name}" %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <i>(<%= @minimum_password_length %> characters minimum)</i>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", :validate => { :presence => true, :confirmation => true } %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", :validate => true %>
            </div>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "Sign up", :style => "margin-top:20px;" %>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
    </div>
  </div>