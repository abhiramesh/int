<!DOCTYPE html>
<html>
<head>
  <title>ApplyBridge</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.1/css/bootstrap.min.css">
  <%= javascript_include_tag 'application',"//netdna.bootstrapcdn.com/bootstrap/3.0.1/js/bootstrap.min.js", 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="//code.jquery.com/ui/1.11.2/themes/smoothness/jquery-ui.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-default" role="navigation">
  	    <div class="container">
  	      <div class="navbar-header">
  	        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
  	          <span class="sr-only">Toggle navigation</span>
  	          <span class="icon-bar"></span>
  	          <span class="icon-bar"></span>
  	          <span class="icon-bar"></span>
  	        </button>
    	        <a class="navbar-brand" href="<%=root_path%>">
    	        	<img src="<%=asset_path('apo.png')%>" class="logo">
    	        </a>
  	      </div>
  	      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
  	        <ul class="nav navbar-nav navbar-right">
  	          <% if !current_user %>
                <% if current_page?(root_path) %>
                <% end %>
                <!-- <li class="nav_item"><a href="/join">Join</a></li> -->
                <li class="nav_item"><a href="/login">Login</a></li>
  	          <% else %>
                <li><a href="/add_profile">My Profile</a></li>
  	            <li><a href="/logout">Logout</a></li>
  	          <% end %>
  	        </ul>
  	      </div>
  	    </div>
  	</nav>
    <br>
    <% if flash[:error] %>
      <div class="container" align="center">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <div id="error" class="alert alert-danger alert-dismissable"><%= flash[:error] %></div>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="container" align="center">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <div id="alert" class="alert alert-danger alert-dismissable"><%= flash[:alert] %></div>
      </div>
    <% end %>
    <% if flash[:notice] %>
      <div class="container" align="center">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <div id="notice" class="alert alert-warning alert-dismissable"><%= flash[:notice] %></div>
      </div>
    <% end %>
<%= yield %>
<script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-33607428-2', 'auto');
  ga('send', 'pageview');

</script>
</body>
</html>
